{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Multiple C++ File Config",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-O0",
				"-gdwarf-2",
				"-Wall",
				"-g",
				"-std=c++17",
				"${fileDirname}/*.cpp",
				"-o",
				"${fileDirname}\\main.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:\\mingw64\\bin\\g++.exe"
		}
	]
}